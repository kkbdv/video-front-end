.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin:5px 5px;
  box-sizing: border-box;
}

.row{
  display: flex;
  flex-direction: row;
  justify-content: center
}
.column{
  display: flex;
  flex-direction: column;
  align-items: center;

}



